body, html {
	width: 100%; min-width: 1024px; height: 100%;
}
html {
	background: #edefef url('<%= asset_path("background-default.png") %>') left top repeat;
}
body {
	background-position: left 45px; background-size: cover; -moz-background-size: cover; -webkit-background-size: cover; background-repeat: no-repeat; background-color: transparent;
}

	#wrapper {
		background: url('<%= asset_path("background-header.png") %>') left top repeat-x;
		width: 100%; min-height: 100%;
		position: relative; z-index: 1;
	}
		header, article, footer {
			text-align: left;
			width: 984px; margin: 0 auto;
		}
		
		header {
			height: 45px;
			position: relative;
		}
			header .logo {
				margin-top: 10px; margin-right: 25px;
				float: left;
			}
			#finder {
				float: left; position: relative;
			}
				.showing {
					color: #fff; font-size: 14px; line-height: 45px; cursor: pointer;
					background: url('<%= asset_path("arrow-dropdown.gif") %>') right top no-repeat;
					padding-right: 50px;
					display: inline-block;
				}
				#finder form {
					background: #eaeaea; box-shadow: 0 1px 1px #999; -webkit-box-shadow: 0 1px 1px #999; -moz-box-shadow: 0 1px 1px #999;
					right: 1px; top: 45px; width: 325px; padding: 15px; -webkit-border-radius: 6px 0 6px 6px; -moz-border-radius: 6px 0 6px 6px; border-radius: 6px 0 6px 6px;
					position: absolute; display: none; z-index: 1;
				}
					.current_location, .address_submit {
						font-size: 16px; line-height: 42px; color: #eaeaea; text-align: center;
						background: url('<%= asset_path("button-location.png") %>') left top repeat-x;  box-shadow: inset 0 1px 0 #c2c2c2; -moz-box-shadow: inset 0 1px 0 #c2c2c2; -webkit-box-shadow: inset 0 1px 0 #c2c2c2;
						height: 42px; border: 1px solid #393939; -webkit-border-radius: 8px; -moz-border-radius: 8px; border-radius: 8px;
						display: block;
					}
						.current_location:hover, .address_submit:hover {
							text-decoration: none;
							background-position: left -44px;
						}
						.current_location:active, .address_submit:active {
							background-position: left -88px; box-shadow: inset 0 1px 0 #1f1f1f; -moz-box-shadow: inset 0 1px 0 #1f1f1f; -webkit-box-shadow: inset 0 1px 0 #1f1f1f; 
							border-color: #282828;
						}
					.or {
						font-size: 30px; line-height: 1.5em; font-style: italic; color: #666; text-align: center;
						background: url('<%= asset_path("border-finder.gif") %>') center center no-repeat;
						padding: 10px 0;
						display: block;
					}
					.address_input {
						font-size: 20px; vertical-align: middle;
						background: #fff;
						border: 5px solid #b2b2b2; padding: 5px 10px; width: 225px; margin-right: 3px;
						display: inline-block;
					}
					.address_submit {
						cursor: pointer; vertical-align: middle;
						padding: 0 15px;
						display: inline-block;
					}
				
			#finder:hover .showing {
				background-position: right -45px;
			}
			#finder:hover form {
				display: block;
			}
			
		article {
			padding: 65px 0;
			overflow: hidden; position: relative;
		}
		
		.no_background {
			background: url('<%= asset_path("background-no-photos.png") %>') left 180px no-repeat;
		}

			#panels {
				background: #eaeaea;
				width: 537px; height: 500px; padding: 20px 25px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
				float: left; overflow: auto;
			}
					#tips img {
						width: 40px; border: 1px solid #333; margin-right: 15px; margin-top: 2px;
						float: left;
					}
					#tips h2 {
						color: #487d8f; font-size: 21px;
						margin-bottom: 5px; padding-left: 55px;
					}
					#tips p {
						font-size: 14px; line-height: 1.4em;
						padding-left: 55px; padding-bottom: 40px;
					}
			#details {
				color: #ccc;
				background-color: rgba(0, 0, 0, 0.8);
				width: 328px; height: 500px; padding: 20px 25px 71px 25px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
				float: right; position: relative;
			}
				#details h1 {
					color: #fff;
					margin-bottom: 20px;
				}
				#details h3 {
					color: #E7E56B; font-weight: 400; margin-bottom: 17px; font-size: 16px;
				}
				#details p {
					padding-bottom: 25px;
				}
				#details ul {
					margin-bottom: 17px; width: 100%;
					float: left; clear: both;
				}
					#details li {
						vertical-align: middle; text-align: center;
						width: 90px; margin-right: 10px;
						float: left; position: relative;
					}
						.statistic {
							font-size: 34px; line-height: 58px; color: #fff;
							background: url('<%= asset_path("background-statistic.png") %>') left top repeat-x;
							height: 58px;
							display: block;
						}
						.category {
							font-size: 12px;
							background: #000;
							display: block;
						}
						
						.tooltip {
							text-align: left; color: #666;
							top: 0; right: 95px; width: 328px; padding-right: 21px;
							position: absolute; z-index: 2; display: none;
						}
							.tooltip img {
								right: 0; top: 25px;
								position: absolute;
							}
							.violations {
								background: #fff;
								padding: 15px 15px 0; min-height: 30px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
							}
							.tooltip h4 {
								margin-bottom: 10px;
							}
					#details li:first-child:hover .tooltip {
						display: block;
					}
						
				#more_details_tabs {
					left: -45px; width: 385px;
					position: relative; clear: both;
				}
					.topic {
						padding: 20px 15px 20px 45px;
						display: block; position: relative;
					}
					.topic a:first-child {
						color: #e7e56b; font-size: 21px;
					}
					.topic .close {
						text-transform: uppercase; font-size: 12px; color: #666;
						right: 15px; top: 22px;
						position: absolute; display: none;
					}
						.topic a:hover {
							text-decoration: none;
						}
							.topic a:first-child:hover {
								color: #bdbb4b;
							}
							.topic .close:hover {
								color: #333;
							}
					.topic.selected {
						background: #eaeaea;
						-webkit-border-radius: 0 6px 6px 0; -moz-border-radius: 0 6px 6px 0; border-radius: 0 6px 6px 0;
					}
						.topic.selected a:first-child {
							color: #000;
						}
						.topic.selected .close {
							display: inline;
						}
				#user_actions {
					background: #212121 url('<%= asset_path("background-pagination.png") %>') left top repeat-x;
					bottom: 0; left: 0; width: 100%; -webkit-border-radius: 0 0 6px 6px; -moz-border-radius: 0 0 6px 6px; border-radius: 0 0 6px 6px;
					position: absolute; overflow: hidden;
				}
					#user_actions a {
						color: #828282; line-height: 50px; text-align: center;
						height: 50px; width: 117px; padding: 0 20px; border-left: 1px solid #202020; border-right: 1px solid #444545;
						float: left;
					}
						#user_actions img {
							vertical-align:text-top;
							display: inline-block;
						}
						#user_actions small {
							font-size: 11px; vertical-align: middle;
							display: inline-block;
						}
					#user_actions a:first-child {
						border-left: 0;
					}
					#user_actions a:last-child {
						border-right: 0; -webkit-border-radius: 0 0 6px 6px; -moz-border-radius: 0 0 6px 6px; border-radius: 0 0 6px 6px;
					}
					
						#user_actions a:hover {
							text-decoration: none; color: #fff;
							background: url('<%= asset_path("background-pagination.png") %>') left -50px repeat-x;
						}
					
					#user_actions a.favorite {
						text-indent: -10000px; text-align: left;
						background: url('<%= asset_path("button-stars.png") %>') center top no-repeat;
						width: 20px; -webkit-border-radius: 0 0 0 6px; -moz-border-radius: 0 0 0 6px; border-radius: 0 0 0 6px;
					}
						#user_actions a.favorite:hover {
							background-position: center -50px;
						}
						#user_actions a.favorite:active {
							background-position: center -100px;
						}
					#user_actions a.favorite.selected {
						background-position: center -150px;
					}
						#user_actions a.favorite.selected:hover {
							background-position: center -200px;
						}
						#user_actions a.favorite.selected:active {
							background-position: center -250px;
						}
			#rating {
				font-size: 14px; color: #ccc; text-align: left;
				background-color: rgba(0, 0, 0, 0.8);
				left: 0; bottom: 65px; padding: 5px 10px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
				position: absolute;
			}
				.like, .dislike {
					text-indent: -10000px;
					background-image: url('<%= asset_path("icons-thumbs.png") %>'); background-repeat: no-repeat; background-color: transparent;
					width: 22px; height: 22px; margin-left: 3px;
					display: inline-block;
				}
				.like {
					background-position: left top;
				}
					.like:hover {
						background-position: left -22px;
					}
				.dislike {
					background-position: right top;
				}
					.dislike:hover {
						background-position: right -22px;
					}
					
					
.homepager {
	background: #303131 url('<%= asset_path("background.png") %>') left top repeat-x; background-size: auto; -moz-background-size: auto; -webkit-background-size: auto;
	overflow: hidden;
}
	.homepager header {
		text-align: center; color: #fff;
		padding-top: 50px; height: auto;
	}
		.homepager header img {
			margin-left: -40px;
		}
		.homepager h1 {
			font-weight: 400; font-size: 30px;
			padding-top: 15px;
		}
		
	.homepager article {
		text-align: center;
		width: 100%;
	}
		.homepager form {
			margin-bottom: 50px;
		}
		.homepager .current_location {
			 padding: 0 20px;
			display: inline-block;
		}
		.homepager .address_input {
			display: inline-block;
		}
		.homepager form span {
			color: #999; vertical-align: middle; font-size: 24px; font-style: italic;
			margin: 0 25px;
			display: inline-block;
		}
	
	.homepager footer {
		text-align: center; color: #999; font-size: 12px;
	}