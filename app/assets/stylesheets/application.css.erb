body, html {
	background-position: left 45px; background-size: cover; -moz-background-size: cover; -webkit-background-size: cover; background-repeat: no-repeat;
	width: 100%; min-width: 1024px;
}
	#wrapper {
		background: url('<%= asset_path("background-header.png") %>') left top repeat-x;
		width: 100%;
	}
		header, article, footer {
			text-align: left;
			width: 984px; margin: 0 auto;
		}
		
		header {
			height: 45px;
			position: relative;
		}
			header .logo {
				margin-top: 12px; margin-right: 25px;
				float: left;
			}
			#finder {
				float: left; position: relative;
			}
				.showing {
					color: #fff; font-size: 14px; line-height: 45px; cursor: pointer;
					background: url('<%= asset_path("arrow-dropdown.gif") %>') right top no-repeat;
					padding-right: 50px;
					display: inline-block;
				}
				#finder form {
					background: #eaeaea;
					right: 1px; top: 45px; padding: 15px; -webkit-border-radius: 6px 0 6px 6px; -moz-border-radius: 6px 0 6px 6px; border-radius: 6px 0 6px 6px;
					position: absolute; display: none;
				}
					.current_location {
						font-size: 16px; line-height: 42px; color: #eaeaea; text-align: center;
						background: url('<%= asset_path("button-location.png") %>') left top repeat-x;  box-shadow: inset 0 1px 0 #c2c2c2; -moz-box-shadow: inset 0 1px 0 #c2c2c2; -webkit-box-shadow: inset 0 1px 0 #c2c2c2;
						height: 42px; border: 1px solid #393939; -webkit-border-radius: 8px; -moz-border-radius: 8px; border-radius: 8px;
						display: block;
					}
						.current_location:hover {
							text-decoration: none;
							background-position: left -44px;
						}
						.current_location:active {
							background-position: left -88px; box-shadow: inset 0 1px 0 #1f1f1f; -moz-box-shadow: inset 0 1px 0 #1f1f1f; -webkit-box-shadow: inset 0 1px 0 #1f1f1f; 
							border-color: #282828;
						}
					.or {
						font-size: 30px; line-height: 1.5em; font-style: italic; color: #666; text-align: center;
						background: url('<%= asset_path("border-finder.gif") %>') center center no-repeat;
						padding: 10px 0;
						display: block;
					}
					#finder input {
						font-size: 20px;
						background: #fff;
						border: 5px solid #b2b2b2; padding: 5px 10px; width: 200px;
					}
				
			#finder:hover .showing {
				background-position: right -45px;
			}
			#finder:hover form {
				display: block;
			}
			
		article {
			padding-top: 65px;
			overflow: hidden;
		}
			#panels {
				background: #eaeaea;
				width: 537px; height: 455px; padding: 20px 25px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
				float: left; overflow: auto;
			}
			#details {
				color: #fff;
				background-color: rgba(0, 0, 0, 0.8);
				width: 328px; height: 455px; padding: 20px 25px; -webkit-border-radius: 6px; -moz-border-radius: 6px; border-radius: 6px;
				float: right;
			}
			
